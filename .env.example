# 基础配置
DATABASE_URL="postgresql://user:password@localhost:5432/dbname"
NEXT_PUBLIC_SITE_URL="http://localhost:60318"

# 安全密钥（生产环境务必修改）
ADMIN_JWT_SECRET="change-me-to-secure-secret"
CONFIG_ENCRYPTION_KEY="change-me-in-production-min-32-chars!!"

# 管理员初始账号（仅用于首次初始化，可留空）
ADMIN_INITIAL_EMAIL="admin@example.com"
ADMIN_INITIAL_PASSWORD="admin123"

# 兼容旧版统计接口（未使用可留空或删除）
STATS_PASSWORD="stats-password"

# 对象存储（可在后台配置，这里用于默认值或离线环境）
R2_ACCESS_KEY_ID="your-r2-access-key"
R2_SECRET_ACCESS_KEY="your-r2-secret"
R2_BUCKET="binarystore"
R2_ENDPOINT="https://<account-id>.r2.cloudflarestorage.com"
R2_PUBLIC_URL="https://cdn.example.com"
R2_REGION="auto"
# 若使用其他 S3 兼容存储，可改用以下变量
S3_ACCESS_KEY_ID=""
S3_SECRET_ACCESS_KEY=""
S3_BUCKET=""
S3_ENDPOINT=""
S3_REGION="auto"

# 速率限制 / Redis（可选）
REDIS_URL="redis://:password@host:6379/0"
RATE_LIMIT_MAX=10
RATE_LIMIT_WINDOW_MS=900000

# 邮件服务（找回密码、通知）
SMTP_HOST="smtp.example.com"
SMTP_PORT=587
SMTP_USER="smtp-user"
SMTP_PASS="smtp-pass"
SMTP_SECURE=false
MAIL_FROM="BinaryStore <no-reply@example.com>"

# 版本号标识（可选，用于健康检查）
NEXT_VERSION="local"
